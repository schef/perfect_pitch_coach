<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/commodore64_14"
        tools:context=".practices.PracticeTestActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/commodore64_empty_row_size"
            android:background="@color/commodore64_06"
            android:scrollbars="vertical"
    >

        <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:background="@color/commodore64_07"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_05"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:textAlignment="center"

        />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                      android:layout_marginRight="@dimen/commodore64_empty_row_size"
                      android:layout_marginTop="@dimen/commodore64_empty_row_size"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sing: "

                    android:fontFamily="@font/c64_pro"
                    android:textColor="@color/commodore64_14"
                    android:textSize="@dimen/commodore64_font_size"
                    android:textAllCaps="true"

            />

            <TextView
                    android:id="@+id/tvPitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"

                    android:fontFamily="@font/c64_pro"
                    android:textColor="@color/commodore64_14"
                    android:textSize="@dimen/commodore64_font_size"
                    android:textAllCaps="true"
            />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                      android:layout_marginRight="@dimen/commodore64_empty_row_size"
                      android:layout_marginTop="@dimen/commodore64_empty_row_size"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: "

                    android:fontFamily="@font/c64_pro"
                    android:textColor="@color/commodore64_14"
                    android:textSize="@dimen/commodore64_font_size"
                    android:textAllCaps="true"

            />

            <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"

                    android:fontFamily="@font/c64_pro"
                    android:textColor="@color/commodore64_14"
                    android:textSize="@dimen/commodore64_font_size"
                    android:textAllCaps="true"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"

                    android:fontFamily="@font/c64_pro"
                    android:textColor="@color/commodore64_14"
                    android:textSize="@dimen/commodore64_font_size"
                    android:textAllCaps="true"
            />

            <TextView
                    android:id="@+id/tvScoreMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"

                    android:fontFamily="@font/c64_pro"
                    android:textColor="@color/commodore64_14"
                    android:textSize="@dimen/commodore64_font_size"
                    android:textAllCaps="true"
            />

        </LinearLayout>

        <TextView
                android:id="@+id/btnPlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="@dimen/commodore64_empty_row_size"
                android:text="play"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_14"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:background="@color/commodore64_03"
                android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                android:layout_marginRight="@dimen/commodore64_empty_row_size"
                android:layout_marginTop="@dimen/commodore64_empty_row_size"
        />

        <TextView
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="@dimen/commodore64_empty_row_size"
                android:text="next"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_14"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:background="@color/commodore64_03"
                android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                android:layout_marginRight="@dimen/commodore64_empty_row_size"
                android:layout_marginTop="@dimen/commodore64_empty_row_size"
        />

        <TextView
                android:id="@+id/btnPlayC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="@dimen/commodore64_empty_row_size"
                android:text="play c"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_14"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:background="@color/commodore64_03"
                android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                android:layout_marginRight="@dimen/commodore64_empty_row_size"
                android:layout_marginTop="@dimen/commodore64_empty_row_size"
        />

        <TextView
                android:id="@+id/btnSkip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="@dimen/commodore64_empty_row_size"
                android:text="skip"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_14"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:background="@color/commodore64_03"
                android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                android:layout_marginRight="@dimen/commodore64_empty_row_size"
                android:layout_marginTop="@dimen/commodore64_empty_row_size"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Description:"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_14"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                android:layout_marginRight="@dimen/commodore64_empty_row_size"
                android:layout_marginTop="@dimen/commodore64_empty_row_size"
        />

        <ScrollView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
        >

            <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_ipsum"

                    android:fontFamily="@font/c64_pro"
                    android:textColor="@color/commodore64_14"
                    android:textSize="@dimen/commodore64_font_size"
                    android:textAllCaps="true"
                    android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                    android:layout_marginRight="@dimen/commodore64_empty_row_size"
            />

        </ScrollView>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>