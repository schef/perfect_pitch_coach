<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/commodore64_14"
        tools:context=".practices.PracticeTestActivity">

    <LinearLayout
            android:id="@+id/layMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/commodore64_empty_row_size"
            android:background="@color/commodore64_06"
            android:visibility="invisible"
    >

        <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:background="@color/commodore64_07"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_05"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:textAlignment="center"

        />

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_14"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                android:layout_marginRight="@dimen/commodore64_empty_row_size"
                android:layout_marginTop="@dimen/commodore64_empty_row_size"
        />


        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

    </LinearLayout>

    <TextView
            android:id="@+id/tvLoading"
            android:visibility="visible"
            android:text="Loading..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:fontFamily="@font/c64_pro"
            android:textColor="@color/commodore64_07"
            android:textSize="@dimen/commodore64_font_size"
            android:textAllCaps="true"/>


</android.support.constraint.ConstraintLayout>


