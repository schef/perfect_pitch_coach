<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/commodore64_14"
        tools:context=".practices.PracticeTestActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/commodore64_empty_row_size"
            android:background="@color/commodore64_06"
    >

        <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:background="@color/commodore64_07"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_05"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:textAlignment="center"

        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_14"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                android:layout_marginRight="@dimen/commodore64_empty_row_size"
                android:layout_marginTop="@dimen/commodore64_empty_row_size"
        />

        <TextView
                android:id="@+id/btnTestPractice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="@dimen/commodore64_empty_row_size"
                android:text="test practice"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_14"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:background="@color/commodore64_03"
                android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                android:layout_marginRight="@dimen/commodore64_empty_row_size"
                android:layout_marginTop="@dimen/commodore64_empty_row_size"
        />

        <TextView
                android:id="@+id/btnMeditation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="@dimen/commodore64_empty_row_size"
                android:text="meditation"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_14"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:background="@color/commodore64_03"
                android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                android:layout_marginRight="@dimen/commodore64_empty_row_size"
                android:layout_marginTop="@dimen/commodore64_empty_row_size"
        />

        <TextView
                android:id="@+id/btnJsonList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="@dimen/commodore64_empty_row_size"
                android:text="json list"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_14"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:background="@color/commodore64_03"
                android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                android:layout_marginRight="@dimen/commodore64_empty_row_size"
                android:layout_marginTop="@dimen/commodore64_empty_row_size"
        />

        <TextView
                android:id="@+id/btnRoomDatabase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/commodore64_empty_row_size"
                android:text="test backend RoomDatabase"

                android:fontFamily="@font/c64_pro"
                android:textColor="@color/commodore64_14"
                android:textSize="@dimen/commodore64_font_size"
                android:textAllCaps="true"
                android:background="@color/commodore64_03"
                android:layout_marginLeft="@dimen/commodore64_empty_row_size"
                android:layout_marginRight="@dimen/commodore64_empty_row_size"
                android:layout_marginTop="@dimen/commodore64_empty_row_size"
        />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>


